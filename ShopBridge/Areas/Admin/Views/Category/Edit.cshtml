@using System.Configuration
@using ShopBridge.Models
@model Category
@{
    ViewBag.Title = "Edit";
    ViewBag.PageTitle = "Edit";
    ViewBag.PageDescription = "This will edit Category Details";
    ViewBag.ControllerName = "Category";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";

    List<GeneralFile> lstGF = new List<GeneralFile>();
    if (ViewBag.listGF != null)
    {
        lstGF = ViewBag.listGF;
    }
}

<div class="app-content container center-layout mt-2">
    <div class="content-wrapper">
        <div class="content-body container">
            <section id="form-action-layouts">
                <div class="row match-height">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title" id="from-actions-bottom-right">Product Category</h4>
                            <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body collapse in">
                            <div class="card-block">
                                <form class="form-horizontal cascde-forms form-validate" method="post" action="@Url.Action("Edit")" enctype="multipart/form-data">

                                    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
                                    <input type="hidden" name="CreatedOn" value="@Model.CreatedOn" />
                                    <input type="hidden" name="IsActive" value="@Model.IsActive.Value.ToString()" />
                                    <input type="hidden" name="IsDeleted" value="@Model.IsDeleted.Value.ToString()" />
                                    <input type="hidden" name="CompanyID" value="@Model.CompanyID">
                                    @if (Model.CreatedBy.HasValue)
                                    {
                                        <input type="hidden" name="CreatedBy" value="@Model.CreatedBy.Value">
                                    }

                                    <div class="form-body">

                                        <div class="col-md-12 form-group">
                                            <label class="col-md-2 control-label">Category Name</label>
                                            <div class="col-md-10">
                                                <input type="text" class="form-control form-cascade-control input-small txtCategoryName required"
                                                       placeholder="Enter Category Name here" name="CategoryName" id="name" value="@Model.CategoryName">
                                            </div>
                                        </div>

                                        <div class="col-md-12 form-group">
                                            <label class="col-md-2 control-label">Short Description</label>
                                            <div class="col-md-10">
                                                <textarea class="ckeditor form-control form-cascade-control input-small"
                                                          name="CategoryDescription">
                                                    @Model.CategoryDescription
                                                </textarea>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="card-block">
                                        <div class="form-actions ">
                                            <div class="buttons-group float-xs-left" align="center">
                                                <input type="submit" value="Save" class="btn btn-success mr-1">
                                                <a href="@Url.Action("Index")" class="btn btn-primary mr-1">Back to List</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<div class="clearfix padd"></div>
