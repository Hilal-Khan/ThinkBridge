@model IEnumerable<ShopBridge.Models.Category>
@using ShopBridge.ApplicationCode.Common_Implementation
@using ShopBridge.HelperUtility;
@using ShopBridge.Models
@{
    ViewBag.Title = "Category";
    ViewBag.PageTitle = "Index";
    ViewBag.PageDescription = "Details about Category";
    ViewBag.ControllerName = "Category";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="app-content container center-layout mt-2">
    <div class="content-header row">
        @Html.RenderMessages()
        <section class="content-header">
            <div class="breadcrumb-wrapper col-md-6">
                <h3>
                    Product Category
                </h3>
            </div>
            <div class="breadcrumb-wrapper col-md-6" style="padding-left: 398px;">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Dashboard")"> <i class="icon-android-plus"></i>Home</a>
                    </li>
                </ol>
            </div>
        </section>
    </div>

    <div class="content-body">
        <section id="column-selectors">
            <div class="row">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">

                            <h3 class="panel-title">

                                <i class="icon-plus"></i> @Html.ActionLink("Create New", "Create")
                                <span class="pull-right">
                                    <a href="#" class="panel-minimize"><i class="fa fa-chevron-up"></i></a>
                                </span>
                            </h3>

                            <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0 ">
                                    <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-body collapse in">
                            <div class="card-block card-dashboard">
                                <table class="table table-striped  table-bordered ApplyDatatable " style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>&nbsp;</th>
                                            <th class="visible-lg">Category Name</th>
                                            <th class="visible-lg">Category Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>

                                                    <a class="btn btn-primary btn-xs" title="Edit" href="@Url.Action("Edit", "Category", new { @id = item.CategoryID })">
                                                        <i class="icon-edit2"></i>
                                                    </a>



                                                    <a class="btn btn-danger btn-xs" title="Delete" onclick="return confirm('Are you sure you want to Remove?');"
                                                       href="@Url.Action("Delete","Category", new { @id = item.CategoryID })">
                                                        <i class="icon-delete"></i>
                                                    </a>

                                                </td>
                                                <td>
                                                    @item.CategoryName
                                                </td>
                                                <td>
                                                    @Html.Raw(item.CategoryDescription)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script src="@Url.Content("~/MyTheme/app-assets/vendors/js/tables/jquery.dataTables.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/MyTheme/app-assets/vendors/js/tables/datatable/dataTables.bootstrap4.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/MyTheme/app-assets/vendors/js/tables/datatable/dataTables.colReorder.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/MyTheme/app-assets/vendors/js/tables/datatable/dataTables.responsive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/MyTheme/app-assets/vendors/js/tables/datatable/dataTables.fixedHeader.min.js")" type="text/javascript"></script>


